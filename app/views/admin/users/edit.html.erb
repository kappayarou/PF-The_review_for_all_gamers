<div class="container">
  <div class-"row">
    <div class="col-md-3"><h2><b>ユーザー編集</b></h2></div>
    <div class="col-md-9"></div>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <%= form_with model: @user, url: admin_user_path, local: true do |f| %>
        <table class="table borderless">
          <tbody>
            <tr>
              <td>ID</td>
              <td><%= @user.id %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, class:"admin-user-edit-field" %></td>
            </tr>
            <tr>
              <td><%= f.label :nickname, "ニックネーム" %></td>
              <td><%= f.text_field :nickname, class:"admin-user-edit-field" %></td>
            </tr>
            <tr>
              <td>ステータス</td>
              <td><%= f.radio_button :is_active, true, checked: true %> <%= f.label :is_active, "有効" %>　<%= f.radio_button :is_active, false, %> <%= f.label :is_active, "無効" %></td>
            </tr>
            <tr>
              <td><%= f.label :report, "通報回数" %></td>
              <td><%= f.number_field :report, class:"admin-user-edit-field" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "更新", class="btn btn-primary" %>　<%= link_to "戻る", admin_user_path, class:"btn btn-success" %></td>
            </tr>
            <tr>
          </tbody>
        </table>
      <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>

</div>