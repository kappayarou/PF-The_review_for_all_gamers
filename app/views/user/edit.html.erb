<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-3"><h2><b>プロフィール編集</b></h2></div>
    <div class="col-md-8"></div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @user, url: user_path(@user.id), local: true  do |f| %>
        <div class="row">
          <div class="col-md-6 mt-4"><%= f.label :email, "メールアドレス" %></div>
          <div class="col-md-6 mt-4"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>
        <div class="row">
          <div class="col-md-6"><%= f.label :nickname, "ニックネーム" %></div>
          <div class="col-md-6"><%= f.text_field :nickname, autofocus: true, autocomplete: "name" %></div>
        </div>
        <div class="row">
          <div class="col-md-6"></div>
          <div class="col-md-6"><%= f.submit "プロフィール更新", class:"btn btn-primary" %></div>
        </div>
      <% end %>
    </div>
  </div>

</div>