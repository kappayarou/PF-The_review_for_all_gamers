<div class="container">
  <div class-"row">
    <div class="col-md-3"><h2><b>ユーザー詳細</b></h2></div>
    <div class="col-md-9"></div>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <table class="table borderless">
        <tbody>
          <tr>
            <td>ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>ニックネーム</td>
            <td><%= @user.nickname %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <% if @user.is_active %>
              <td class="active">有効</td>
            <% else %>
              <td class="inactive">無効</td>
            <% end %>
          </tr>
          <tr>
            <td>通報回数</td>
            <td><%= @user.report %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= link_to "レビュー一覧", reviews_index_admin_users_path %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= link_to "編集", edit_admin_user_path %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-2"></div>
  </div>

</div>